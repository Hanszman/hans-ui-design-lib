{
  "name": "hans-ui-design-lib",
  "description": "UI Design System Base Lib",
  "author": "Victor Hanszman",
  "version": "0.0.53",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/style.css",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./style.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "copy:assets": "cpx \"src/assets/**/*\" dist/assets",
    "build": "vite build && npm run copy:assets",
    "build:local": "npm run build && npm pack --pack-destination dist",
    "build:storybook": "storybook build",
    "build:cdn": "vite build --mode cdn",
    "build:cdn-local": "vite build --mode cdn && vite preview --outDir cdn --port 5173",
    "publish:patch": "npm version patch --no-git-tag-version && npm publish",
    "publish:minor": "npm version minor --no-git-tag-version && npm publish",
    "publish:major": "npm version major --no-git-tag-version && npm publish",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage-html": "npx vitest run --coverage --reporter=html",
    "test:ui": "npx vite preview --outDir html",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": ">=19.0.0 <20.0.0",
    "react-dom": ">=19.0.0 <20.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@ungap/custom-elements": "^1.3.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpx": "^1.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.8",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "markdown-to-jsx": "^7.7.15",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-to-webcomponent": "^2.0.1",
    "sass": "^1.93.2",
    "storybook": "^9.1.8",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
